<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manager.mapper.system.SystemUserMapper">

    <sql id="tableName">
        systemuser
    </sql>

    <!-- 字段 -->
    <sql id="Field">
        username,
        password,
        name,
        company,
        privilege
    </sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
        #{username},
        #{password},
        #{name},
        #{company},
        #{privilege}
    </sql>

    <select id="existUserByUsername" resultType="Integer">
        SELECT COUNT(*)
        FROM <include refid="tableName"/>
        WHERE username = #{username}
    </select>

    <select id="existByUser" resultType="Integer"  parameterType="com.manager.pojo.SystemUser">
        select COUNT(*)
        from <include refid="tableName"/>
        where username=#{username} and password=#{password}
    </select>


    <select id="findSystemUser" resultType="com.manager.pojo.SystemUser" parameterType="com.manager.pojo.SystemUser">
        select *
        from <include refid="tableName"/>
        where username=#{username} and password=#{password}
    </select>


    <insert id="save" parameterType="com.manager.pojo.SystemUser">
        insert into<include refid="tableName"/>
        (<include refid="Field"/>)
        values
        (<include refid="FieldValue"/>)
    </insert>


    <update id="update" parameterType="com.manager.pojo.SystemUser">
        update
        <include refid="tableName"/>
        <set>
            <if test="password!='' and password!=null ">
                password=#{password},
            </if>
            <if test="name!='' and name!=null ">
                name=#{name},
            </if>
            <if test="company!='' and company!=null ">
                company=#{company},
            </if>
            <if test="privilege !='' and privilege!=null ">
                privilege=#{privilege},
            </if>
        </set>
        where
        username = #{username}
    </update>


</mapper>